  # â™ git
  msg=$1

  [ $1 == "git" ] && msg="âš•ï¸ git"
  [ $1 == "frontend" ] && msg="â™"
  [ $1 == "backend" ] && msg="ðŸ‘"
  
  echo -ne "\033]0;"${msg}"\007"
}

