# File System
fs-rename-files-to-linux-style() {
  ls | while read -r FILE
  do
    mv -v "$FILE" `echo $FILE | tr ' ' '_' | tr -d '[{}(),\!]' | tr -d "\'" | tr '[A-Z]' '[a-z]' | sed 's/_-_/_/g'`
  done ;
}

