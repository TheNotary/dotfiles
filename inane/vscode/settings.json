{
    "workbench.startupEditor": "newUntitledFile",
    "telemetry.feedback.enabled": false,
    "telemetry.telemetryLevel": "off",
    "update.showReleaseNotes": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.list.openMode": "doubleClick",
    "workbench.preferredHighContrastColorTheme": "Visual Studio 2017 Dark - C++",
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "java.import.generatesMetadataFilesAtProjectRoot": false,
    "editor.renderWhitespace": "none",
    "editor.detectIndentation": false,
    "redhat.telemetry.enabled": false,
    "editor.fontSize": 13,
    "workbench.preferredHighContrastLightColorTheme": "Visual Studio 2017 Light - C++",
    "database.connections": [],
    "workbench.tree.indent": 20,
    "explorer.autoReveal": "focusNoScroll",
    "editor.tabSize": 4,
    "editor.guides.indentation": false,
    "files.insertFinalNewline": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "stretchySpaces.excludedLanguages": [
        "markdown",
        "plaintext",
        "README.md",
        "README",
        "yml",
        "yaml",
        "md"
    ],
    "stretchySpaces.includedLanguages": [
        "javascript",
        "javascriptreact",
        "typescript"
    ],
    "stretchySpaces.updateDelay": 10,
    "editor.folding": false,
    "git.openRepositoryInParentFolders": "never",
    "remove-tabs-on-save.ignoreFileExtensions": [
        "*.go",
        "go.mod",
        "go.sum"
    ],
    "editor.indentSize": "tabSize",
    "editor.inlineSuggest.enabled": true,
    "[plaintext]": {
        "editor.wordWrap": "on"
    },
    "[ruby]": {
        "editor.tabSize": 2
    },
    "[html]": {
        "editor.tabSize": 2,
        "editor.wordWrap": "on"
    },
    "[json]": {
        "editor.detectIndentation": true
    },
    "[erb]": {
        "editor.defaultFormatter": "aliariff.vscode-erb-beautify",
        "editor.wordWrap": "on",
        "editor.tabSize": 2,
        "editor.formatOnSave": true
    },
    "[go.mod]": {
        "editor.tabSize": 2,
        "editor.formatOnSave": false,
        "editor.insertSpaces": false
    },
    "[javascript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "editor.formatOnSave": true
    },
    "vscode-erb-beautify.executePath": "~/bin/htmlbeautifier",
    "vscode-erb-beautify.keepBlankLines": 2,
    "go.toolsManagement.autoUpdate": true,
    "cmake.configureOnOpen": false,
    "debug.openDebug": "neverOpen",
    "window.zoomLevel": 1,
    "files.trimTrailingWhitespace": true,
    "jest.disabledWorkspaceFolders": [],
    "workbench.preferredDarkColorTheme": "Visual Studio Dark - C++",
    "window.autoDetectHighContrast": false,
    "editor.rulers": [
        80,
        100
    ],
    "workbench.colorTheme": "Atom One Light2",
    "editor.accessibilitySupport": "off",
    "editor.stickyScroll.enabled": false,
    "cmake.showOptionsMovedNotification": false,
    "editor.copyWithSyntaxHighlighting": false,
    "chat.commandCenter.enabled": false,
    "files.autoSave": "off",
    "python.analysis.includeAliasesFromUserFiles": true,
    "editor.hover.hidingDelay": 50,
    "extensions.ignoreRecommendations": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        // "source.fixAll": "always",
        // "source.fixAll.ts": "always",
        "source.fixAll.eslint": "always"
    },
    "eslint.validate": [
        "javascript",
        "javascriptreact"
    ],
    "eslint.quiet": false,
    "eslint.format.enable": true,
    "eslint.debug": true,
    // "editor.unicodeHighlight.allowedCharacters": {
    //     "’": false
    // },
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.packageIndexDepths": [
        {
            "name": "pipecat",
            "depth": 4
        },
        {
            "name": "sklearn",
            "depth": 2
        },
        {
            "name": "matplotlib",
            "depth": 2
        },
        {
            "name": "scipy",
            "depth": 2
        },
        {
            "name": "django",
            "depth": 2
        },
        {
            "name": "flask",
            "depth": 2
        },
        {
            "name": "fastapi",
            "depth": 2
        },
        {
            "name": "cuda",
            "depth": 3,
            "includeAllSymbols": true
        }
    ],
    "editor.semanticTokenColorCustomizations": {
        "enabled": true,
        "rules": {
            // Exact match for what the inspector shows now:
            "method.decorator": {
                "foreground": "#f133f7",
                "fontStyle": "bold"
            },
            // Useful if you also use free functions/classes as decorators:
            "function.decorator": {
                "foreground": "#f133f7",
                "fontStyle": "bold"
            },
            "class.decorator": {
                "foreground": "#f133f7",
                "fontStyle": "bold"
            },
            // Catch‑all: anything used as a decorator regardless of base type
            "*.decorator": {
                "foreground": "#f133f7"
            }
        }
    },
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "entity.name.function.decorator.python",
                "settings": {
                    "foreground": "#f133f7"
                }
            },
            {
                "scope": "meta.function.decorator.python",
                "settings": {
                    "foreground": "#f133f7"
                }
            },
        ]
    },
    "html.format.wrapLineLength": 0,
    "editor.renderControlCharacters": false
}
